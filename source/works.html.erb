<section id="works" class="section p-bottom-20 p-top-100">
    <div class="container">
        <!-- Section Title -->
        <div class="row m-bottom-40">
            <div class="col-md-6">
                <h3>Projekty</h3>
                <div class="divider"></div>
            </div>
        </div>
        <!-- End Section Title -->
        
        <!-- Works -->
        <div class="row m-bottom-40">
            <div class="col-md-8">
              <ul>
              <%- data.works.keys.each do |work_category| -%>
                <%- data.works[work_category].each do |work| -%>
                  <li><a href="/projekty/<%= work["id"] %>.html"><%= work["name"] %></a></li>
                <%- end -%>
              <%- end -%>
              </ul>
            </div>
        </div>
        <!-- End Works -->
    </div>
</section>


